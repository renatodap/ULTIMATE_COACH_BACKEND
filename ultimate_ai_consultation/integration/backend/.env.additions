# ============================================================================
# Environment Variables for Adaptive Program System
# ============================================================================
# Add these to: ULTIMATE_COACH_BACKEND/.env

# Path to ultimate_ai_consultation module
# This is the standalone module with all the adaptive logic
ULTIMATE_AI_CONSULTATION_PATH=/path/to/ultimate_ai_consultation

# Anthropic API Key (for structured data extraction)
# Should already exist in your .env, but ensure it's present
ANTHROPIC_API_KEY=sk-ant-api03-...

# Supabase (should already exist)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key  # For cron jobs

# Scheduler Settings
ENABLE_SCHEDULER=true  # Set to false to disable automatic reassessments
REASSESSMENT_CRON_HOUR=2  # Hour (UTC) to run daily reassessment check

# Cost Controls
MAX_REASSESSMENTS_PER_HOUR=100  # Rate limit for system safety
ENABLE_COST_TRACKING=true  # Log API costs to database

# Optional: Celery (if using instead of APScheduler)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Feature Flags
ENABLE_CONVERSATIONAL_LOGGING=true  # Extract structured data from chat
ENABLE_QUICK_LOGGING=true  # Support "2500 cal" format
ENABLE_AUTO_ACKNOWLEDGMENT=true  # Coach confirms when data extracted

# Logging
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
